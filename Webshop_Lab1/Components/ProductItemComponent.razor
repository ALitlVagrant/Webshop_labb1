@using Webshop_Lab1
@using Webshop_Lab1.Models

<li>
    <a href="/productdetails/@Product.Id">
        <img src="@Product.ImageUrl" alt="@Product.Name" width="100" height="100" />
        <br />
        @Product.Name
        <br />
        <strong>@Product.Price kr</strong> 
    </a>
</li>

@code {
    [Parameter] public Product Product { get; set; }
}